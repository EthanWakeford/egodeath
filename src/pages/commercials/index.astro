---
import Layout from '../../layouts/Layout.astro';
import Sidekick from '../../components/Sidekick';
import TextImageCard from '../../components/TextImageCard';

import { getTestData } from '../../firebase';

const testData = await getTestData();
---

<Layout metaDescription='commercials' title='Commercials'>
  <Sidekick
    backgroundImages={[
      'src/assets/placeholders/1920x1080.jpg',
      'src/assets/placeholders/1280x720.jpg',
      'src/assets/placeholders/1920x1080.jpg',
      'src/assets/placeholders/1280x720.jpg',
    ]}
    tagline='Commercial'
    welcomeText=''
  />
  {
    testData.map((doc, index) => (
      <TextImageCard
        bodyText={doc.testdescription}
        imageAltText={doc.name}
        imageLink={doc.image}
        title={doc.name}
        link={`/commercials/${doc.name}`}
        reversed={index % 2 === 0}
      />
    ))
  }
  <TextImageCard
    bodyText='we did some fun stuff here'
    imageAltText='fun stuff'
    imageLink='src/assets/placeholders/1200x800.jpg'
    title='fun stuff'
    link='/commercials/clifford'
    reversed={false}
  /><TextImageCard
    bodyText='we did some fun stuff here'
    imageAltText='fun stuff'
    imageLink='src/assets/placeholders/1200x800.jpg'
    title='fun stuff'
    link='/commercials/clifford'
    reversed={true}
  />
</Layout>

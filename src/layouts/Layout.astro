---
import Header from '../components/Header';
import Footer from '../components/Footer';

interface Props {
  title: string;
  metaDescription: string;
}

const { title, metaDescription } = Astro.props;
---

<!doctype html>
<html lang='en' class='bg-black font-sans font-light text-white'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={metaDescription} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <script
      src='https://kit.fontawesome.com/d1b675ff4f.js'
      crossorigin='anonymous'></script>
    <script>
      if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
      localStorage.theme = 'light';
      localStorage.theme = 'dark';
      localStorage.removeItem('theme');
    </script>
    <title>{title ? `${title} - EgoDeath` : 'EgoDeath'}</title>
  </head>
  <body>
    <Header
      title='EgoDeath'
      navs={[
        { link: '/commercials', name: 'COMMERCIALS' },
        { link: '/food', name: 'FOOD' },
        { link: '/events', name: 'EVENTS' },
      ]}
      client:load
    />
    <main>
      <slot />
    </main>
    <Footer
      address='your moms house'
      copyright='EgoDeath 2024'
      navs={[
        { link: '/', name: 'HOME' },
        { link: '/commercials', name: 'COMMERCIALS' },
        { link: '/food', name: 'FOOD' },
        { link: '/events', name: 'EVENTS' },
      ]}
      phone='91812323'
      socials={[
        { link: 'https://www.instagram.com/', type: 'instagram' },
        { link: 'https://www.facebook.com/', type: 'facebook' },
      ]}
    />
  </body>
</html>

<!-- custom animation keyframes and other global stuffs -->
<style is:global>
  @tailwind base;

  @layer base {
    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(20vh);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in-up {
      animation: fadeInUp 0.75s ease-out;
    }
    .card-zoom {
      @apply relative overflow-hidden;
    }
    .card-zoom-image {
      @apply absolute h-full w-full transform bg-cover bg-center transition-all duration-500 ease-in-out;
    }
    .card-zoom-text {
      @apply absolute transform text-gray-50 transition-all duration-500 ease-in-out;
    }
    .zoom-in {
      @apply scale-[1.25];
    }
  }

  a {
    @apply transition-transform duration-300 ease-in-out;
  }

  a:hover {
    @apply scale-110;
  }
</style>
